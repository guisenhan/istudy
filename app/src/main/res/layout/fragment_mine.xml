<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/window_background_color"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="11dp"
        android:background="@color/unit_background_color"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我"
            android:textSize="@dimen/tv_title_size"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_title_bar_search"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/default_divider_color"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="11dp"
        android:background="@color/unit_background_color"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/icon_default_photo"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            app:riv_corner_radius="25dp"
            android:id="@+id/riv_user_photo"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:id="@+id/ll_person_info"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="超凡大师"
                android:textColor="@color/text_important_color"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_user_name"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学号：2015001001"
                android:textColor="@color/text_other_color"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                android:id="@+id/tv_account"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/mine_safe_setting"
            android:drawableLeft="@mipmap/mine_change_password"
            android:paddingBottom="@dimen/mine_options_padding_vertical"
            android:paddingTop="@dimen/mine_options_padding_vertical"
            android:paddingLeft="@dimen/mine_options_margin_horizontal"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/mine_options_padding_vertical"
            android:id="@+id/tv_safe_setting"
            android:background="@drawable/mail_type_back"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="切换帐号"
            android:drawableLeft="@mipmap/icon_switch_account"
            android:paddingBottom="@dimen/mine_options_padding_vertical"
            android:paddingTop="@dimen/mine_options_padding_vertical"
            android:paddingLeft="@dimen/mine_options_margin_horizontal"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/mine_options_padding_vertical"
            android:id="@+id/tv_switch"
            android:background="@drawable/mail_type_back"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/mine_safe_exit"
            android:drawableLeft="@mipmap/icon_exit"
            android:paddingBottom="@dimen/mine_options_padding_vertical"
            android:paddingTop="@dimen/mine_options_padding_vertical"
            android:paddingLeft="@dimen/mine_options_margin_horizontal"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/mine_options_padding_vertical"
            android:id="@+id/tv_exit"
            android:background="@drawable/mail_type_back"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            />
    </LinearLayout>
</LinearLayout>