<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="hise.hznu.istudy.activity.course.CallBackActivity">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:background="@color/unit_background_color"
		android:padding="11dp"
		android:id="@+id/rl_top"
		>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/iv_back"
			android:src="@mipmap/arrow_left"
			/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="回复"
			android:textSize="16sp"
			android:textColor="@color/text_important_color"
			android:id="@+id/tv_title"
			android:layout_toRightOf="@+id/iv_back"
			android:layout_marginLeft="15dp"
			/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="发送"
			android:textColor="@color/colorPrimary"
			android:id="@+id/tv_email_send"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:textSize="16sp"
			android:padding="5dp"
			/>

	</RelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/divider_height"
		android:background="@color/divider_color"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>
			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/colorPrimary"
				android:layout_marginTop="10dp"
				>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					>
					<ImageButton
						android:id="@+id/action_insert_image"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_insert_image"
						/>
				</LinearLayout>
			</HorizontalScrollView>
			<jp.wasabeef.richeditor.RichEditor
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/re_editor"
				android:padding="11dp"
				android:minHeight="300dp"
				/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="回复列表"
				android:textSize="15sp"
				android:textColor="@color/text_important_color"
				android:padding="11dp"
				/>
			<hise.hznu.istudy.widget.MyListView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/mlv_comment"
				/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
