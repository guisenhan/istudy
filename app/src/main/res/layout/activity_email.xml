<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="hise.hznu.istudy.activity.email.EmailActivity">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:background="@color/colorPrimary"
		android:padding="11dp"
		android:id="@+id/rl_top"
		>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/iv_back"
			android:src="@mipmap/arrow_left"
			/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="读邮件"
			android:layout_centerInParent="true"
			android:textSize="16sp"
			android:textColor="@color/text_important_color"
			android:id="@+id/tv_title"
			/>
	</RelativeLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="11dp"
		android:layout_below="@+id/rl_top"
		android:id="@+id/ll_top"
		>
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_weight="2"
			>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="第五次作业"
				android:id="@+id/tv_name"
				android:textColor="@color/text_important_color"
				android:textSize="15sp"
				/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="发件人："
				android:layout_marginTop="8dp"
				android:id="@+id/tv_email_sender"
				/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="收件人："
				android:layout_marginTop="5dp"
				android:id="@+id/tv_email_geter"
				/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="时间"
				android:textSize="14sp"
				android:textColor="@color/text_other_color"
				android:layout_marginTop="5dp"
				android:id="@+id/tv_date"
				/>
		</LinearLayout>
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="隐藏详情"
			android:textSize="13sp"
			android:textColor="@color/colorPrimary"
			android:gravity="right"
			android:id="@+id/tv_hide"
			/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/divider_height"
		android:background="@color/default_divider_color"
		android:layout_below="@+id/ll_top"
		android:id="@+id/divider"
		/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/tv_content"
		android:textColor="@color/text_important_color"
		android:textSize="15sp"
		android:layout_below="@+id/divider"
		/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:orientation="horizontal"
		android:background="#f5f5f5"
		android:layout_alignParentBottom="true"
		android:gravity="center"
		>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@mipmap/icon_email_back"
			/>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@mipmap/icon_delete"
			android:layout_marginLeft="20dp"
			/>
	</LinearLayout>
</RelativeLayout>
