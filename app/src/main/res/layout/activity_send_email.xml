<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/window_background_color"
	tools:context="hise.hznu.istudy.activity.email.SendEmailActivity">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:orientation="horizontal"
		android:padding="11dp"
		android:background="@color/unit_background_color"
		>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@mipmap/icon_cancle"
			android:id="@+id/iv_back"
			/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="发邮件"
			android:textColor="@color/black"
			android:textSize="16sp"
			android:layout_marginLeft="15dp"
			android:layout_toRightOf="@+id/iv_back"
			/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="发送"
			android:layout_alignParentRight="true"
			android:textSize="16sp"
			android:textColor="@color/colorPrimary"
			android:id="@+id/tv_send"
			/>
	</RelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/divider_height"
		android:background="@color/divider_color"/>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="5dp"
		android:paddingTop="5dp"
		android:paddingLeft="11dp"
		android:paddingRight="11dp"
		android:gravity="center_vertical"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="收件人："
			android:layout_centerVertical="true"
			android:id="@+id/tv_left"
			/>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/btn_add_contactor"
			android:layout_alignParentRight="true"
			android:id="@+id/iv_add"
			android:layout_centerVertical="true"
			/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/tv_getter"
			android:singleLine="true"
			android:layout_toRightOf="@+id/tv_left"
			android:layout_toLeftOf="@+id/iv_add"
			android:layout_centerVertical="true"
			/>
	</RelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/divider_height"
		android:background="@color/default_divider_color"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingTop="8dp"
		android:paddingBottom="8dp"
		android:paddingLeft="11dp"
		android:paddingRight="11dp"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="主题："
			/>
		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/ed_subject"
			android:background="@null"
			/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/divider_height"
		android:background="@color/default_divider_color"/>
	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="300dp"
		android:id="@+id/ed_content"
		android:gravity="top|left"
		android:background="@null"
		/>
</LinearLayout>
