<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_title_bar_folder"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/iv_choose"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_email"
            android:textSize="@dimen/tv_title_size"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_choose"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_title_bar_plus"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:id="@+id/icon_add"
            android:visibility="invisible"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/icon_add"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_title_bar_search"
            android:layout_marginRight="20dp"
            android:id="@+id/iv_search"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/default_divider_color"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lv_email"
                android:dividerHeight="@dimen/divider_height"
                android:divider="@color/default_divider_color"
                />
            <hise.hznu.istudy.widget.LoadView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/load_view"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/ll_email_type"
            >
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:background="@color/unit_background_color"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="收件箱"
                    android:textColor="@color/text_important_color"
                    android:textSize="16sp"
                    android:padding="11dp"
                    android:id="@+id/tv_get_email"
                    android:drawableLeft="@mipmap/mail_folder_type_inbox"
                    android:drawablePadding="6dp"
                    android:background="@drawable/mail_type_back"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider_color"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发件箱"
                    android:padding="11dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_important_color"
                    android:id="@+id/tv_send_email"
                    android:drawableLeft="@mipmap/mail_folder_type_sent"
                    android:drawablePadding="6dp"
                    android:background="@drawable/mail_type_back"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider_color"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="写邮件"
                    android:padding="11dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_important_color"
                    android:id="@+id/tv_write_email"
                    android:drawableLeft="@mipmap/icon_write_email"
                    android:drawablePadding="6dp"
                    android:background="@drawable/mail_type_back"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:alpha="0.4"
                ></LinearLayout>
        </LinearLayout>

    </FrameLayout>

    
</LinearLayout>