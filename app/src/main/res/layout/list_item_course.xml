<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="11dp"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_course"
        >
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:id="@+id/rl_icon"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/text_white_color"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="面向对象程序设计"
                android:layout_centerVertical="true"
                android:id="@+id/tv_pic_title"
                android:gravity="center"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_toRightOf="@+id/rl_icon"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="面向对象程序设计"
                android:textColor="@color/text_important_color"
                android:id="@+id/tv_course_name"
                android:textSize="14sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                >
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_user_photo"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:riv_corner_radius="10dp"
                    android:id="@+id/riv_user_photo"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="15dp"
                    android:id="@+id/tv_teacher_name"
                    android:textSize="15sp"
                    />

            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即学习"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@drawable/blue_ovil_tv_back"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/tv_study"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_arrow_down"
        android:layout_below="@+id/rl_course"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_arrow"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="面向对象程序设计"
        android:textSize="14sp"
        android:textColor="@color/text_important_color"
        android:id="@+id/tv_course_detail"
        android:visibility="gone"
        />
</LinearLayout>