<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:layout_height="match_parent"
	tools:context="hise.hznu.istudy.activity.course.EditPostActivity">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:padding="11dp"
		android:id="@+id/rl_top"
		android:background="@color/unit_background_color"
		>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/iv_back"
			android:src="@mipmap/arrow_left"
			android:paddingRight="13dp"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:layout_centerVertical="true"
			/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="我的实验"
			android:layout_toRightOf="@+id/iv_back"
			android:textSize="16sp"
			android:textColor="@color/text_important_color"
			android:id="@+id/tv_title"
			android:layout_centerVertical="true"
			/>
	</RelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/divider_height"
		android:background="@color/divider_color"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>
			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="11dp"
				android:hint="标题"
				android:layout_marginLeft="11dp"
				android:layout_marginRight="11dp"
				android:background="@null"
				android:layout_marginTop="15dp"
				android:id="@+id/ed_title"
				android:textSize="14sp"
				/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/colorPrimary"
				android:layout_marginTop="10dp"
				>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					>

					<ImageButton
						android:id="@+id/action_undo"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_undo"
						/>

					<ImageButton
						android:id="@+id/action_redo"
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_redo"
						/>

					<ImageButton
						android:id="@+id/action_bold"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_bold"
						/>

					<ImageButton
						android:id="@+id/action_italic"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_italic"
						/>

					<ImageButton
						android:id="@+id/action_subscript"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_subscript"
						/>

					<ImageButton
						android:id="@+id/action_superscript"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_superscript"
						/>

					<ImageButton
						android:id="@+id/action_strikethrough"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_strikethrough"
						/>

					<ImageButton
						android:id="@+id/action_underline"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_underline"
						/>

					<ImageButton
						android:id="@+id/action_heading1"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_h1"
						/>

					<ImageButton
						android:id="@+id/action_heading2"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_h2"
						/>

					<ImageButton
						android:id="@+id/action_heading3"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_h3"
						/>

					<ImageButton
						android:id="@+id/action_heading4"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_h4"
						/>

					<ImageButton
						android:id="@+id/action_heading5"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_h5"
						/>

					<ImageButton
						android:id="@+id/action_heading6"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_h6"
						/>

					<ImageButton
						android:id="@+id/action_txt_color"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_txt_color"
						/>

					<ImageButton
						android:id="@+id/action_bg_color"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_bg_color"
						/>
					<ImageButton
						android:id="@+id/action_indent"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_indent"
						/>

					<ImageButton
						android:id="@+id/action_outdent"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_outdent"
						/>

					<ImageButton
						android:id="@+id/action_align_left"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_justify_left"
						/>

					<ImageButton
						android:id="@+id/action_align_center"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_justify_center"
						/>

					<ImageButton
						android:id="@+id/action_align_right"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_justify_right"
						/>

					<ImageButton
						android:id="@+id/action_insert_bullets"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_bullets"
						/>

					<ImageButton
						android:id="@+id/action_insert_numbers"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_numbers"
						/>

					<ImageButton
						android:id="@+id/action_blockquote"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_blockquote"
						/>

					<ImageButton
						android:id="@+id/action_insert_image"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_insert_image"
						/>

					<ImageButton
						android:id="@+id/action_insert_link"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@mipmap/icon_insert_link"
						/>

					<ImageButton
						android:id="@+id/action_insert_checkbox"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:background="@null"
						android:contentDescription="@null"
						android:src="@android:drawable/checkbox_on_background"
						/>

				</LinearLayout>
			</HorizontalScrollView>
			<jp.wasabeef.richeditor.RichEditor
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/re_editor"
				android:padding="11dp"
				android:minHeight="300dp"
				/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:text="发送"
				android:background="@color/colorPrimary"
				android:gravity="center"
				android:textColor="@color/text_white_color"
				android:id="@+id/tv_email_send"
				android:layout_marginTop="20dp"
				/>
		</LinearLayout>
	</ScrollView>

</LinearLayout>
