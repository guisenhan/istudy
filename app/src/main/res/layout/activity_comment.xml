<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/window_background_color"
	tools:context="hise.hznu.istudy.activity.course.CommentActivity">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/topbar_height"
		android:padding="11dp"
		android:background="@color/unit_background_color"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/text_white_color"
			android:drawableLeft="@mipmap/arrow_left"
			android:drawablePadding="5dp"
			android:gravity="center"
			android:textSize="15sp"
			android:id="@+id/tv_back"
			android:paddingRight="8dp"
			android:paddingBottom="5dp"
			android:paddingTop="5dp"
			/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="互评列表"
			android:textSize="18sp"
			android:textColor="@color/black"
			android:id="@+id/tv_title"
			android:layout_toRightOf="@+id/tv_back"
			android:layout_centerVertical="true"
			/>
	</RelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/divider_height"
		android:background="@color/divider_color"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="题目要求"
				android:padding="11dp"
				android:textSize="13sp"
				android:textColor="@color/text_important_color"
				/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="11dp"
				android:textSize="13sp"
				android:id="@+id/tv_comment_title"
				android:textColor="@color/text_important_color"
				/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="学生作业"
				android:padding="11dp"
				android:textSize="13sp"
				android:textColor="@color/text_important_color"
				/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/text_important_color"
				android:id="@+id/tv_student_answer"
				android:padding="11dp"
				/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="评论区"
				android:padding="11dp"
				android:textColor="@color/text_important_color"
				android:textSize="13sp"
				/>
			<hise.hznu.istudy.widget.MyListView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/lv_comment"
				android:divider="@color/divider_color"
				android:scrollbars="none"
				/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:text="提交"
				android:textSize="15sp"
				android:background="@color/colorPrimary"
				android:textColor="@color/text_white_color"
				android:gravity="center"
				android:textStyle="bold"
				android:id="@+id/tv_auto_commit"
				/>
		</LinearLayout>

	</ScrollView>

</LinearLayout>
