<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/window_background_color"
	tools:context="hise.hznu.istudy.activity.course.CommentActivity">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/topbar_height"
		android:padding="11dp"
		android:background="@color/unit_background_color"
		android:id="@+id/rl_top"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/text_white_color"
			android:drawableLeft="@mipmap/arrow_left"
			android:drawablePadding="5dp"
			android:gravity="center"
			android:textSize="15sp"
			android:id="@+id/tv_back"
			android:paddingRight="8dp"
			android:paddingBottom="5dp"
			android:paddingTop="5dp"
			/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="互评列表"
			android:textSize="18sp"
			android:textColor="@color/black"
			android:id="@+id/tv_title"
			android:layout_toRightOf="@+id/tv_back"
			android:layout_centerVertical="true"
			/>
	</RelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/divider_height"
		android:background="@color/divider_color"
		android:layout_below="@+id/rl_top"
		android:id="@+id/divider"
		/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/divider"
		>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="题目要求"
				android:padding="11dp"
				android:textSize="13sp"
				android:textColor="@color/text_important_color"
				/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="11dp"
				android:layout_marginRight="11dp"
				android:textSize="13sp"
				android:id="@+id/tv_comment_title"
				android:textColor="@color/text_important_color"
				/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/ll_answer"
				android:orientation="vertical"
				>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="学生作业"
					android:padding="11dp"
					android:textSize="13sp"
					android:textColor="@color/text_important_color"
					/>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColor="@color/text_important_color"
					android:id="@+id/tv_student_answer"
					android:text=""
					android:layout_marginLeft="11dp"
					android:layout_marginRight="11dp"
					/>
			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:text="附件区"
				android:textSize="12sp"
				android:textColor="@color/text_important_color"
				android:layout_marginLeft="11dp"
				/>
			<LinearLayout
				android:layout_width="80dp"
				android:layout_height="70dp"
				android:layout_marginLeft="11dp"
				android:id="@+id/ll_addtional"
				android:orientation="vertical"
				android:gravity="center_horizontal"
				android:background="@drawable/back_gray_rectangle_empty"
				android:padding="8dp"
				android:layout_marginTop="8dp"
				>
				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@mipmap/icon_attachment_download"
					android:id="@+id/icon_download"
					/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="点击查看附件"
					android:layout_marginTop="3dp"
					android:textSize="10sp"
					android:textColor="@color/text_important_color"
					/>
			</LinearLayout>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="评论区"
				android:layout_marginTop="3dp"
				android:layout_marginLeft="11dp"
				android:textColor="@color/text_important_color"
				android:textSize="13sp"
				/>
			<hise.hznu.istudy.widget.MyListView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/lv_comment"
				android:divider="@color/divider_color"
				android:scrollbars="none"
				/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="评语"
				android:layout_marginLeft="11dp"
				android:layout_marginTop="8dp"
				/>
			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="5dp"
				android:layout_marginLeft="11dp"
				android:layout_marginRight="11dp"
				android:paddingBottom="5dp"
				android:layout_marginTop="4dp"
				android:background="@drawable/back_gray_rectangle_empty"
				android:id="@+id/ed_comment"
				/>
			<TextView
				android:layout_width="50dp"
				android:layout_height="40dp"
				android:layout_gravity="center_horizontal"
				android:text="提交"
				android:textSize="15sp"
				android:background="@color/colorPrimary"
				android:textColor="@color/text_white_color"
				android:gravity="center"
				android:textStyle="bold"
				android:id="@+id/tv_auto_commit"
				android:layout_marginTop="10dp"
				/>
		</LinearLayout>
	</ScrollView>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:orientation="horizontal"
		android:layout_alignParentBottom="true"
		android:background="#f8f8f9"
		android:gravity="center_vertical"
		android:id="@+id/ll_bottom"
		>

		<ImageView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:src="@mipmap/icon_arrow_left"
			android:layout_weight="1"
			android:id="@+id/iv_left_arrow"
			/>
		<ImageView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@mipmap/icon_save"
			android:id="@+id/iv_save"
			/>

		<ImageView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:src="@mipmap/icon_arrow_right"
			android:layout_weight="1"
			android:id="@+id/iv_right_arrow"
			/>
	</LinearLayout>
</RelativeLayout>
