<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/window_background_color"
	tools:context="hise.hznu.istudy.activity.course.CommentListActivity">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/topbar_height"
		android:padding="11dp"
		android:background="@color/unit_background_color"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/text_white_color"
			android:drawableLeft="@mipmap/arrow_left"
			android:drawablePadding="5dp"
			android:gravity="center"
			android:textSize="15sp"
			android:id="@+id/tv_back"
			android:paddingRight="8dp"
			android:paddingBottom="5dp"
			android:paddingTop="5dp"
			/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="互评列表"
			android:textSize="18sp"
			android:textColor="@color/black"
			android:id="@+id/tv_title"
			android:layout_toRightOf="@+id/tv_back"
			android:layout_centerVertical="true"
			/>
	</RelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/divider_height"
		android:background="@color/divider_color"
		/>
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="11dp"
				android:layout_marginTop="15dp"
				android:orientation="horizontal"
				>
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="序号"
					android:gravity="center"
					/>
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="得分"
					android:gravity="center"
					/>
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="是否评分"
					android:gravity="center"
					/>
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="操作"
					android:gravity="center"
					/>
			</LinearLayout>
			<ListView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/lv_comment_list"
				android:divider="@color/divider_color"
				android:dividerHeight="@dimen/divider_height"
				/>
		</LinearLayout>
		<hise.hznu.istudy.widget.LoadView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/load_view"
			></hise.hznu.istudy.widget.LoadView>
	</FrameLayout>

</LinearLayout>
